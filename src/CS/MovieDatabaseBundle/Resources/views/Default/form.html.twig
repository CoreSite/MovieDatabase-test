<div class="jumbotron">
    {{ form_start(form, { 'attr' : {'id' : 'add_movie' }}) }}
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_widget(form.title, { 'attr': {'class' : 'form-control', 'placeholder' : 'Title'} }) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_widget(form.year, { 'attr': {'class' : 'form-control'} }) }}
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    {{ form_widget(form.rating, { 'attr': {'class' : 'form-control', 'placeholder' : 'Rating'} }) }}
                </div>
            </div>
            <div class="col-md-6"><button type="submit" class="btn btn-default pull-right">Add movie</button></div>
        </div>
    {{ form_end(form) }}
</div>